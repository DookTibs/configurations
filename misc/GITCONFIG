[alias]
	bcdiff = !sh ~/development/shellScripts/openGitDiffsInBackground.sh
	ignored = !git ls-files -v | grep "^[[:lower:]]"
	showfiles = "!f() { git diff-tree -no-commit-id --name-only -r $1; }; f"
	mylog = !git log --author="Feiler"

